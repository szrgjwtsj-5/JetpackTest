<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/notif_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/notif_clickBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/notif_icon"
        android:layout_marginStart="10dp"
        android:text="click"/>

    <TextView
        android:id="@+id/notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="titleeeeeeeeeeeeeee"/>

    <TextView
        android:id="@+id/notif_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/notif_title"
        android:layout_marginEnd="10dp"
        android:text="subtitleeeeeeeeee"/>

    <ProgressBar
        android:id="@+id/notif_progress"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_clickBtn"
        android:layout_alignStart="@+id/notif_clickBtn"
        style="?android:progressBarStyleHorizontal"/>
</RelativeLayout>